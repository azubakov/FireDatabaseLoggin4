<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tomer.edu.firedemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/ShoppingList"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.UserListsActivity"
            android:label="@string/title_activity_user_lists"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ShareListWithUsersActivity"
            android:label="@string/title_activity_share_list_with_users"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ShoppingListItemsActivity"></activity>
    </application>

</manifest>